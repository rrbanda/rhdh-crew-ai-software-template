# Leopard Pont des Arts - CrewAI Multi-Agent Application
# Base image: Red Hat UBI9 Python 3.11

FROM registry.access.redhat.com/ubi9/python-311:latest

# Set environment variables
ENV APP_HOME=/app
ENV CONFIG_DIR=/app/configs
ENV PYTHONUNBUFFERED=1

WORKDIR $APP_HOME

# Ensure root permissions during installation
USER root

# Install system dependencies
RUN dnf install -y gcc make && \
    dnf clean all

# Copy application files
COPY . .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Create non-root user and set permissions
RUN groupadd -r appgroup || true && \
    useradd -r -g appgroup appuser || true && \
    chown -R appuser:appgroup $APP_HOME && \
    chmod -R 775 $APP_HOME

# Switch to non-root user
USER appuser

# Expose FastAPI port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Start the FastAPI application
CMD ["uvicorn", "src.api:app", "--host", "0.0.0.0", "--port", "8000"]
